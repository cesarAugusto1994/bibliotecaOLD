{% extends "::base.html.twig" %}

{% block title %}bibliotecaBundle:Acervo:show{% endblock %}
{% block stylesheets %}{{ include('header.html.twig') }}
<script src="{{ asset('template/show.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}

    {{ include('menu.html.twig') }}
    {{ include('side-menu.html.twig') }}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Acervos</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Editar</th>
                            <th>Ativar/Inativar</th>
                            <th>ID</th>
                            <th>Titulo</th>
                            <th>Autor</th>
                            <th>Ativo</th>
                            <th>Alteracao</th>
                            <th>Cadastro</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for acervo in acervos %}
                            <tr>
                                <td><a href="{{ path('edit', {'id':acervo.id}) }}"><img src="{{ asset('favicon.ico') }}"></a></td>
                                {%  if(acervo.ativo) == 0 %}
                                <td><a class="fa fa-star-o" id="alerta"  href="{{ path('inativar', {'id':acervo.id}) }}"></a></td>
                                {% else %}
                                <td><a class="fa fa-star" href="{{ path('inativar', {'id':acervo.id}) }}"></a></td>
                                {% endif %}
                                <td>{{ acervo.id }}</td>
                                <td>{{ acervo.titulo }}</td>
                                <td>{{ acervo.autor }}</td>
                                <td>{{ acervo.ativo }}</td>
                                <td>{{ acervo.alteracao|date('d/m/Y H:i:s') }}</td>
                                <td>{{ acervo.cadastro|date('d/m/Y H:i:s') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="8">&nbsp;</td>
                        </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->


    {{ include('footer.html.twig') }}
{% endblock %}
{% block javascripts %}{{ include('js.html.twig') }}{% endblock %}
