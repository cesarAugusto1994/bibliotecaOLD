{% extends "::base.html.twig" %}

{% block title %}bibliotecaBundle:Acervo:show{% endblock %}
{% block stylesheets %}{{ include('header.html.twig') }}{% endblock %}
{% block body %}

    {{ include('menu.html.twig') }}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Hover Data Table</h3>
                </div>
                <div class="box-body">

                    <form method="post" action="{{ path('update') }}">

                    <div class="input-group">
                        <label>ID:
                            <input type="text" id="id" name="id" class="form-control" value="{{ acervo.id }}" readonly>
                        </label>
                    </div>

                    <div class="input-group">
                        <label>Titulo:
                            <input type="text" id="titulo" name="titulo" class="form-control"
                                   value="{{ acervo.titulo|upper }}">
                        </label>
                    </div>

                    <div class="input-group">
                        <label>Autor:
                            <input type="text" id="autor" name="autor" class="form-control" value="{{ acervo.autor }}">
                        </label>
                    </div>

                        <button type="submit" class="btn btn-primary">Salvar</button>

                        </form>
                </div>
            </div>
        </div>
    </div>

    {{ include('footer.html.twig') }}
{% endblock %}
{% block javascripts %}{{ include('js.html.twig') }}{% endblock %}